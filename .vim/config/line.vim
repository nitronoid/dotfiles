" Highlight the current line
set cursorline
" Makes cursorline usable
set lazyredraw
" Add line numbers
set number
set list
" Keep the current line centred
set scrolloff=999
" Show git modified lines
set signcolumn=yes
" Add the gutter line, displays mode, file etc.
set laststatus=2
" Visualise the line length limit
set colorcolumn=80
highlight ColorColumn ctermbg=Black guibg=darkgrey

