" when indenting with '>', use 2 spaces width
set noexpandtab
set tabstop=2
set shiftwidth=2
set softtabstop=-1
set autoindent
let g:vim_indent_guides_start_level = 2
" Visualise white-space
set lcs=trail:·,tab:»·
" Visualise the line length limit
set colorcolumn=80
highlight ColorColumn ctermbg=Black guibg=darkgrey

