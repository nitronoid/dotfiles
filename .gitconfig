[user]
	name = Jack Diver
	email = jackdiver@hotmail.co.uk
[core]
	pager = less
	autocrlf = input
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[alias]
	p4 = !'git-p4'
	plog = log --compact-summary --graph
[git-p4]
	detectRenames = true
	detectCopies = true
